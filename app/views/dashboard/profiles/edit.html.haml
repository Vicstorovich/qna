= simple_form_for current_user, url: dashboard_profiles_path, html: { method: :put } do |f|
  = f.input :email
  = f.input :password
  = f.input :password_confirmation

  = f.simple_fields_for :profile do |pf|
    = pf.input :name
    = pf.input :addres
    = pf.input :link
    = pf.input :avatar

  = f.submit "Save"

= image_tag profile.avatar.thumb_mini.url
